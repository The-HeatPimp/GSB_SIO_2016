      <div class="container">
        <div class="row">
          <section id="vehicleManagement" class="col-lg-6 col-md-12 row">
            <h4>Gestion des véhicule</h4>
            <div class="col-md-6 col-xs-12">
              
              <p>Ajouter un véhicule</p>
              <label>Type de véhicule</label>
              <select id="VSelectType">
                <option value="Berline">Berline</option>
                <option value="Break">Break</option>
                <option value="Citadine">Citadine</option>
                <option value="Utilitaire">Utilitaire</option>
              </select>
              <label>nombre de places</label>
              <input id="VNbPlace" type="number"/>
              <button id="addVehicle">Ajouter</button>
              <p id="addRes"></p>
            </div>
            <div class="col-md-6 col-xs-12">
              <p>Supprimer un véhicule</p>
              <select id="VSelect" onchange="selectChangeV()">
                <option value="" selected>Selectionner un Véhicule</option>
              </select>
              <button id="delVehicle" style="display: none">Supprimer</button>
              <p id="delRes"></p>
            </div>
          </section>
          <section id="userManagement" class="col-lg-6 col-md-12 row">
            <h4>Gestion des utilisateurs</h4>
            <div class="col-md-6 col-xs-12">
              
              <p>Ajouter un utilisateur</p>
              Nom<input id="addUName" type="text"/>
              Prenom<input id="addUSurname" type="text" />
              email<input id="addUMail" type="text" />
              username<input id="addUUsername" type="text" />
              <button id="addUBtnCheck">Valider l'utilisateur</button>
              rue<input id="addUStreet" type="text" />
              code postale<input id="addUZipCode"  type="text" />
              ville<input id="addUCity" type="text" />
              telephone<input id="addUPhone" type="text" />
              mot de passe<input id="addUPass" type="text" />
              <button id="addUBtnAdd">Ajouter l'utilisateurs</button>
            </div>
            <div class="col-md-6 col-xs-12">
              <p>Supprimer un utilisateur</p>
              <select id="VSelect">
              </select>
              <button>Supprimer</button>
            </div>
          </section>
        </div>
      </div>
